<% layout("/layouts/boilerplate") %>

<div class="error-page">
  <div class="error-container">
    <div class="error-icon">
      <i class="fa-solid fa-triangle-exclamation"></i>
    </div>
    <h1 class="error-code">Oops!</h1>
    <p class="error-message"><%= message %></p>
    <div class="error-actions">
      <a href="/listings" class="btn btn-primary">
        <i class="fa-solid fa-home"></i> Go Home
      </a>
      <button onclick="history.back()" class="btn btn-outline-secondary">
        <i class="fa-solid fa-arrow-left"></i> Go Back
      </button>
    </div>
  </div>
</div>

<style>
  .error-page {
    min-height: 80vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
  }

  .error-container {
    text-align: center;
    max-width: 500px;
  }

  .error-icon {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    background: linear-gradient(135deg, #fee2e2 0%, #fecaca 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1.5rem;
    animation: bounce 2s infinite;
  }

  .error-icon i {
    font-size: 3rem;
    color: #ef4444;
  }

  @keyframes bounce {
    0%, 20%, 50%, 80%, 100% {
      transform: translateY(0);
    }
    40% {
      transform: translateY(-10px);
    }
    60% {
      transform: translateY(-5px);
    }
  }

  .error-code {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--text-dark, #1f2937);
    margin: 0 0 0.5rem 0;
  }

  .error-message {
    font-size: 1.1rem;
    color: var(--text-light, #6b7280);
    margin: 0 0 2rem 0;
  }

  .error-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .error-actions .btn {
    padding: 0.75rem 1.5rem;
    border-radius: 10px;
    font-weight: 600;
    transition: all 0.3s ease;
  }

  .error-actions .btn-primary {
    background: var(--primary-color, #fe424d);
    border-color: var(--primary-color, #fe424d);
  }

  .error-actions .btn-primary:hover {
    background: #e63946;
    border-color: #e63946;
    transform: translateY(-2px);
  }

  .error-actions .btn-outline-secondary:hover {
    transform: translateY(-2px);
  }

  /* Dark mode */
  [data-theme="dark"] .error-code {
    color: #f3f4f6;
  }

  [data-theme="dark"] .error-icon {
    background: linear-gradient(135deg, rgba(239, 68, 68, 0.2) 0%, rgba(239, 68, 68, 0.1) 100%);
  }
</style>
