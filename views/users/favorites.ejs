<% layout("/layouts/boilerplate") %>

<body>
  <div class="container mt-4">
    <h2 class="mb-4">My Favorites</h2>

    <% if(favorites && favorites.length > 0) { %>
      <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
        <% for(let listing of favorites){ %>
        <a href="/listings/<%=listing._id%>" class="listing-link">
          <div class="card col listing-card">
            <img
              src="<%=listing.image.url %>"
              class="card-img-top"
              alt="listing_image"
              style="height: 20rem"
            />
            <div class="card-img-overlay"></div>
            <div class="card-body">
              <p class="card-text">
                <b><%= listing.title%></b>
              </p>
              <p class="card-text price">
                &#8377; <%=listing.price.toLocaleString("en-IN")%> / night
              </p>
              <p class="card-text">
                <small class="text-muted"><%=listing.location%>, <%=listing.country%></small>
              </p>
            </div>
          </div>
        </a>
        <% } %>
      </div>
    <% } else { %>
      <div class="text-center mt-5">
        <i class="fa-regular fa-heart fa-3x text-muted mb-3"></i>
        <h4 class="text-muted">No favorites yet</h4>
        <p class="text-muted">Start exploring and add some listings to your favorites!</p>
        <a href="/listings" class="btn btn-primary">Explore Listings</a>
      </div>
    <% } %>
  </div>
</body>
