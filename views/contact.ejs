<% layout('layouts/boilerplate') %>

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="contact-header">
                <h1>Contact Us</h1>
                <p class="lead">Have a question or need assistance? We're here to help! Reach out to our friendly support team.</p>
            </div>

            <div class="contact-content">
                <div class="row">
                    <!-- Contact Form -->
                    <div class="col-lg-8">
                        <div class="contact-form-section">
                            <h2>Send us a Message</h2>

                            <form action="/contact" method="POST" class="contact-form">
                                <div class="mb-3">
                                    <label for="name" class="form-label">Full Name *</label>
                                    <input type="text" class="form-control" id="name" name="name" placeholder="Enter your full name" required>
                                </div>
                                <div class="mb-3">
                                    <label for="email" class="form-label">Email Address *</label>
                                    <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email address" required>
                                </div>
                                <div class="mb-3">
                                    <label for="message" class="form-label">Message *</label>
                                    <textarea class="form-control" id="message" name="message" rows="6" placeholder="Tell us how we can help you..." required></textarea>
                                </div>
                                <button type="submit" class="btn btn-primary btn-lg">Send Message</button>
                            </form>
                        </div>
                    </div>

                    <!-- Contact Info -->
                    <div class="col-lg-4">
                        <div class="contact-info">
                            <h3>Get in Touch</h3>

                            <div class="contact-item">
                                <i class="fas fa-envelope"></i>
                                <div>
                                    <strong>Email</strong><br>
                                    <a href="mailto:support@snaptrip.com">support@snaptrip.com</a>
                                </div>
                            </div>

                            <div class="contact-item">
                                <i class="fas fa-phone"></i>
                                <div>
                                    <strong>Phone</strong><br>
                                    <a href="tel:+15551234567">+1 (555) 123-4567</a>
                                </div>
                            </div>

                            <div class="contact-item">
                                <i class="fas fa-clock"></i>
                                <div>
                                    <strong>Response Time</strong><br>
                                    We typically respond within 24 hours
                                </div>
                            </div>

                            <div class="contact-item">
                                <i class="fas fa-map-marker-alt"></i>
                                <div>
                                    <strong>Address</strong><br>
                                    123 Travel Street<br>
                                    Adventure City, AC 12345
                                </div>
                            </div>
                        </div>

                        <div class="contact-note">
                            <h4>Need Immediate Help?</h4>
                            <p>For urgent travel issues, please call us directly. Our support team is available Monday through Friday, 9 AM to 6 PM EST.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
