<% layout("/layouts/boilerplate") %>

<div class="container category-show-section">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <div class="category-show-card">
        <div class="category-header">
          <a href="/categories" class="back-link">
            <i class="fa-solid fa-arrow-left"></i> Back to Categories
          </a>
        </div>
        
        <div class="category-content">
          <div class="category-icon-large">
            <i class="<%= category.icon %>"></i>
          </div>
          
          <h1 class="category-name"><%= category.name %></h1>
          
          <div class="category-meta">
            <div class="meta-item">
              <span class="meta-label">Slug:</span>
              <code class="meta-value"><%= category.slug %></code>
            </div>
            <div class="meta-item">
              <span class="meta-label">Status:</span>
              <% if(category.isActive) { %>
                <span class="badge bg-success"><i class="fa-solid fa-check"></i> Active</span>
              <% } else { %>
                <span class="badge bg-secondary"><i class="fa-solid fa-ban"></i> Inactive</span>
              <% } %>
            </div>
          </div>
          
          <div class="category-timestamps">
            <div class="timestamp">
              <i class="fa-regular fa-calendar-plus"></i>
              <span>Created: <%= category.createdAt.toLocaleString() %></span>
            </div>
            <div class="timestamp">
              <i class="fa-regular fa-calendar-check"></i>
              <span>Updated: <%= category.updatedAt.toLocaleString() %></span>
            </div>
          </div>
        </div>
        
        <div class="category-actions">
          <a href="/categories/<%= category._id %>/edit" class="btn btn-warning">
            <i class="fa-solid fa-pencil"></i> Edit Category
          </a>
          <form action="/categories/<%= category._id %>?_method=DELETE" method="POST" style="display: inline;">
            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this category?')">
              <i class="fa-solid fa-trash"></i> Delete Category
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .category-show-section {
    padding: 3rem 0;
    min-height: calc(100vh - 200px);
  }
  
  .category-show-card {
    background: white;
    border-radius: 12px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    overflow: hidden;
  }
  
  .category-header {
    padding: 1rem 1.5rem;
    background: #f8f9fa;
    border-bottom: 1px solid #e9ecef;
  }
  
  .back-link {
    color: #6c757d;
    text-decoration: none;
    font-size: 0.9rem;
    transition: color 0.3s ease;
  }
  
  .back-link:hover {
    color: #495057;
  }
  
  .back-link i {
    margin-right: 0.5rem;
  }
  
  .category-content {
    padding: 3rem 2rem;
    text-align: center;
  }
  
  .category-icon-large {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 100px;
    height: 100px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border-radius: 20px;
    font-size: 3rem;
    color: white;
    margin-bottom: 1.5rem;
    box-shadow: 0 8px 20px rgba(102, 126, 234, 0.3);
  }
  
  .category-name {
    font-size: 2rem;
    color: #212529;
    margin-bottom: 1.5rem;
  }
  
  .category-meta {
    display: flex;
    justify-content: center;
    gap: 2rem;
    margin-bottom: 1.5rem;
    flex-wrap: wrap;
  }
  
  .meta-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
  
  .meta-label {
    font-weight: 600;
    color: #6c757d;
  }
  
  .meta-value {
    background: #f1f3f5;
    padding: 4px 12px;
    border-radius: 6px;
    font-size: 0.9rem;
  }
  
  .badge {
    padding: 0.5rem 1rem;
    font-size: 0.9rem;
  }
  
  .category-timestamps {
    display: flex;
    justify-content: center;
    gap: 2rem;
    flex-wrap: wrap;
    padding-top: 1.5rem;
    border-top: 1px solid #e9ecef;
  }
  
  .timestamp {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: #6c757d;
  }
  
  .timestamp i {
    color: #667eea;
  }
  
  .category-actions {
    display: flex;
    justify-content: center;
    gap: 1rem;
    padding: 1.5rem 2rem;
    background: #f8f9fa;
    border-top: 1px solid #e9ecef;
  }
  
  .btn-warning {
    background: linear-gradient(135deg, #f5af19 0%, #f12711 100%);
    border: none;
    color: white;
    padding: 0.75rem 1.5rem;
    font-weight: 600;
  }
  
  .btn-warning:hover {
    background: linear-gradient(135deg, #e59f17 0%, #e1230d 100%);
    color: white;
  }
  
  .btn-danger {
    background: #dc3545;
    border: none;
    padding: 0.75rem 1.5rem;
    font-weight: 600;
  }
  
  .btn-danger:hover {
    background: #c82333;
  }
</style>
