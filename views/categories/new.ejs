<% layout("/layouts/boilerplate") %>

<div class="container category-form-section">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
      <div class="form-card">
        <div class="form-header">
          <h2><i class="fa-solid fa-folder-plus"></i> Create New Category</h2>
          <p class="text-muted mb-0">Add a new category to organize your listings</p>
        </div>
        
        <form action="/categories" method="POST" class="category-form">
          <div class="mb-4">
            <label for="name" class="form-label">
              <i class="fa-solid fa-tag"></i> Category Name
            </label>
            <input 
              type="text" 
              class="form-control" 
              id="name" 
              name="name" 
              placeholder="e.g., Hotels, Restaurants, Attractions"
              required
              minlength="2"
              maxlength="50"
            >
            <div class="form-text">Enter a unique name for the category (2-50 characters)</div>
          </div>

          <div class="mb-4">
            <label for="icon" class="form-label">
              <i class="fa-solid fa-icons"></i> Icon Class
            </label>
            <div class="input-group">
              <span class="input-group-text"><i class="fa-solid fa-font-awesome"></i></span>
              <input 
                type="text" 
                class="form-control" 
                id="icon" 
                name="icon" 
                placeholder="e.g., fa-solid fa-hotel"
                required
              >
            </div>
            <div class="form-text">
              Enter a FontAwesome icon class. 
              <a href="https://fontawesome.com/search?m=free" target="_blank" rel="noopener">Browse icons</a>
            </div>
            <div class="icon-preview mt-2">
              <span class="preview-label">Preview:</span>
              <span id="iconPreview" class="preview-icon"><i class="fa-solid fa-question"></i></span>
            </div>
          </div>

          <div class="mb-4">
            <div class="form-check form-switch">
              <input 
                class="form-check-input" 
                type="checkbox" 
                id="isActive" 
                name="isActive" 
                checked
              >
              <label class="form-check-label" for="isActive">
                <i class="fa-solid fa-power-off"></i> Active
              </label>
            </div>
            <div class="form-text">Inactive categories will not appear in filters</div>
          </div>

          <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary flex-grow-1">
              <i class="fa-solid fa-plus"></i> Create Category
            </button>
            <a href="/categories" class="btn btn-outline-secondary">
              <i class="fa-solid fa-arrow-left"></i> Back
            </a>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<script>
  // Icon preview functionality
  const iconInput = document.getElementById('icon');
  const iconPreview = document.getElementById('iconPreview');
  
  iconInput.addEventListener('input', function() {
    const iconClass = this.value.trim();
    if (iconClass) {
      iconPreview.innerHTML = `<i class="${iconClass}"></i>`;
      iconPreview.style.opacity = '1';
    } else {
      iconPreview.innerHTML = '<i class="fa-solid fa-question"></i>';
      iconPreview.style.opacity = '0.5';
    }
  });
</script>

