<% layout("/layouts/boilerplate") %>
<body>
  <div class="new-listing-container">
    <div class="row justify-content-center">
      <div class="col-lg-8 col-md-10 col-12">
        <div class="new-listing-card">
          <div class="card-header">
            <h3 class="card-title"><i class="fas fa-edit"></i> Edit Listing</h3>
            <p class="card-subtitle">Update your listing details</p>
          </div>
          <form method="post" action="/listings/<%= listing._id %>?_method=PUT" enctype="multipart/form-data">
            <div class="form-section">
              <h4 class="section-title"><i class="fas fa-info-circle"></i> Basic Information</h4>
              <div class="form-group"><label for="title" class="form-label"><i class="fas fa-heading"></i> Title</label>
                <input name="listing[title]" value="<%= listing.title %>" type="text" class="form-control" required id="title" />
                <div class="valid-feedback">Title looks good!</div><div class="invalid-feedback">Please provide a title for your listing</div>
              </div>
              <div class="form-group"><label for="description" class="form-label"><i class="fas fa-align-left"></i> Description</label>
                <textarea name="listing[description]" class="form-control" rows="4" required id="description"><%= listing.description %></textarea>
                <div class="invalid-feedback">Please provide a description for your listing</div>
              </div>
              <div class="form-group"><label for="category" class="form-label"><i class="fas fa-tags"></i> Category</label>
                <select name="listing[category]" class="form-select" required id="category">
                  <% for(let cat of categories) { %>
                  <option value="<%= cat._id %>" <%= listing.category && listing.category._id.toString() === cat._id.toString() ? 'selected' : '' %>><%= cat.name %></option>
                  <% } %>
                </select><div class="invalid-feedback">Please select a category</div>
              </div>
            </div>
            <div class="form-section"><h4 class="section-title"><i class="fas fa-camera"></i> Images</h4>
              <% if (listing.image && listing.image.url) { %>
              <div class="mb-3">
                <img src="<%= listing.image.url %>" alt="Current image" class="img-thumbnail" style="max-width: 200px;">
                <small class="text-muted d-block">Current image</small>
              </div>
              <% } %>
              <div class="form-group"><label for="image" class="form-label"><i class="fas fa-upload"></i> Upload New Image (optional)</label>
                <input name="image" type="file" class="form-control file-input" accept="image/*" id="image" />
                <small class="form-text text-muted"><i class="fas fa-info-circle"></i> Supported formats: JPG, PNG, WebP. Maximum size: 5MB. Leave empty to keep current image.</small>
              </div>
            </div>
            <div class="form-section"><h4 class="section-title"><i class="fas fa-map-marker-alt"></i> Location & Pricing</h4>
              <div class="row"><div class="col-md-6"><div class="form-group"><label for="price" class="form-label"><i class="fas fa-rupee-sign"></i> Price per night</label>
                  <div class="input-group"><span class="input-group-text">â‚¹</span><input name="listing[price]" value="<%= listing.price %>" type="number" class="form-control" min="0" required id="price" /></div>
                  <div class="invalid-feedback">Please enter a valid price</div>
                </div></div>
                <div class="col-md-6"><div class="form-group"><label for="country" class="form-label"><i class="fas fa-globe"></i> Country</label>
                  <input name="listing[country]" value="<%= listing.country %>" type="text" class="form-control" required id="country" />
                  <div class="invalid-feedback">Please enter the country</div>
                </div></div>
              </div>
              <div class="form-group"><label for="location" class="form-label"><i class="fas fa-map-pin"></i> Location</label>
                <input name="listing[location]" value="<%= listing.location %>" type="text" class="form-control" required id="location" />
                <div class="invalid-feedback">Please enter the location</div>
              </div>
            </div>
            <div class="form-actions">
              <a href="/listings/<%= listing._id %>" class="btn btn-outline-secondary"><i class="fas fa-arrow-left"></i> Cancel</a>
              <button type="submit" class="btn btn-primary add-btn" id="submitBtn"><i class="fas fa-save"></i> Update Listing</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</body>