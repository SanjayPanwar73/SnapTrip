<% layout('layouts/boilerplate') %>

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="faq-header">
                <h1>Frequently Asked Questions</h1>
                <p class="lead">Find quick answers to the most common questions about SnapTrip. Can't find what you're looking for? Contact our support team.</p>
            </div>

            <div class="faq-search">
                <div class="search-box">
                    <i class="fas fa-search"></i>
                    <input type="text" id="faq-search" placeholder="Search FAQs...">
                </div>
            </div>

            <div class="faq-categories">
                <button class="category-btn active" data-category="all">All Questions</button>
                <button class="category-btn" data-category="account">Account & Profile</button>
                <button class="category-btn" data-category="booking">Booking & Payment</button>
                <button class="category-btn" data-category="travel">Travel & Safety</button>
                <button class="category-btn" data-category="host">Hosting</button>
                <button class="category-btn" data-category="support">Support</button>
            </div>

            <div class="faq-accordion">
                <!-- Account & Profile -->
                <div class="faq-section" data-category="account">
                    <h3><i class="fas fa-user"></i> Account & Profile</h3>

                    <div class="accordion-item">
                        <button class="accordion-header">
                            <span>How do I create a SnapTrip account?</span>
                            <i class="fas fa-chevron-down"></i>
                        </button>
                        <div class="accordion-content">
                            <p>Creating an account is simple! Click the "Sign Up" button in the top right corner, enter your email address, create a secure password, and verify your email. You can also sign up using your Google or Facebook account for faster registration.</p>
                        </div>
                    </div>

                    <div class="accordion-item">
                        <button class="accordion-header">
                            <span>Is it free to create an account on SnapTrip?</span>
                            <i class="fas fa-chevron-down"></i>
                        </button>
                        <div class="accordion-content">
                            <p>Yes, creating an account is completely free. You only pay when you book accommodations or experiences. We don't charge any membership fees or hidden costs for basic account features.</p>
                        </div>
                    </div>

                    <div class="accordion-item">
                        <button class="accordion-header">
                            <span>How do I reset my password?</span>
                            <i class="fas fa-chevron-down"></i>
                        </button>
                        <div class="accordion-content">
                            <p>Click "Forgot Password" on the login page, enter your email address, and we'll send you a secure link to reset your password. Make sure to check your spam folder if you don't see the email within a few minutes.</p>
                        </div>
                    </div>

                    <div class="accordion-item">
                        <button class="accordion-header">
                            <span>Can I change my email address or phone number?</span>
                            <i class="fas fa-chevron-down"></i>
                        </button>
                        <div class="accordion-content">
                            <p>Yes, you can update your contact information in your account settings. Go to "Profile Settings" and update your email or phone number. We'll send a verification code to confirm the changes for security.</p>
                        </div>
                    </div>
                </div>

                <!-- Booking & Payment -->
                <div class="faq-section" data-category="booking">
                    <h3><i class="fas fa-credit-card"></i> Booking & Payment</h3>

                    <div class="accordion-item">
                        <button class="accordion-header">
                            <span>How do I make a booking on SnapTrip?</span>
                            <i class="fas fa-chevron-down"></i>
                        </button>
                        <div class="accordion-content">
                            <p>Select your desired accommodation or experience, choose your dates, and click "Book Now". Review the details, enter your payment information, and confirm your booking. You'll receive an instant confirmation email with all the details.</p>
                        </div>
                    </div>

                    <div class="accordion-item">
                        <button class="accordion-header">
                            <span>What payment methods do you accept?</span>
                            <i class="fas fa-chevron-down"></i>
                        </button>
                        <div class="accordion-content">
                            <p>We accept all major credit and debit cards (Visa, Mastercard, American Express), PayPal, Apple Pay, Google Pay, and bank transfers in select regions. All payments are processed securely through our encrypted payment system.</p>
                        </div>
                    </div>

                    <div class="accordion-item">
                        <button class="accordion-header">
                            <span>Is my payment information secure?</span>
                            <i class="fas fa-chevron-down"></i>
                        </button>
                        <div class="accordion-content">
                            <p>Absolutely. We use bank-level 256-bit SSL encryption and comply with PCI DSS standards. We never store your full credit card details on our servers. Your payment information is securely processed by certified payment providers.</p>
                        </div>
                    </div>

                    <div class="accordion-item">
                        <button class="accordion-header">
                            <span>Can I modify my booking after confirmation?</span>
                            <i class="fas fa-chevron-down"></i>
                        </button>
                        <div class="accordion-content">
                            <p>Modification options depend on the host's policy and how far in advance your request is made. Contact the host directly through our messaging system or reach out to our support team for assistance with booking changes.</p>
                        </div>
                    </div>

                    <div class="accordion-item">
                        <button class="accordion-header">
                            <span>What happens if I need to cancel my booking?</span>
                            <i class="fas fa-chevron-down"></i>
                        </button>
                        <div class="accordion-content">
                            <p>Cancellation policies vary by listing. Check the specific cancellation policy before booking. If you need to cancel, do so through your booking dashboard. Refunds are processed according to the policy and typically take 3-5 business days.</p>
                        </div>
                    </div>
                </div>

                <!-- Travel & Safety -->
                <div class="faq-section" data-category="travel">
                    <h3><i class="fas fa-shield-alt"></i> Travel & Safety</h3>

                    <div class="accordion-item">
                        <button class="accordion-header">
                            <span>Are SnapTrip hosts and listings verified?</span>
                            <i class="fas fa-chevron-down"></i>
                        </button>
                        <div class="accordion-content">
                            <p>Yes, all hosts undergo identity verification, and listings are reviewed for quality and safety. We also conduct regular quality checks and respond quickly to any reported issues. Your safety is our top priority.</p>
                        </div>
                    </div>

                    <div class="accordion-item">
                        <button class="accordion-header">
                            <span>What should I do if I have concerns about my booking?</span>
                            <i class="fas fa-chevron-down"></i>
                        </button>
                        <div class="accordion-content">
                            <p>Contact the host first through our messaging system. If the issue persists, reach out to our 24/7 safety team immediately. We have dedicated support for safety concerns and can help resolve issues quickly.</p>
                        </div>
                    </div>

                    <div class="accordion-item">
                        <button class="accordion-header">
                            <span>Do you offer travel insurance?</span>
                            <i class="fas fa-chevron-down"></i>
                        </button>
                        <div class="accordion-content">
                            <p>While we don't provide insurance directly, we partner with trusted insurance providers. We recommend purchasing comprehensive travel insurance that covers trip cancellations, medical emergencies, and lost belongings.</p>
                        </div>
                    </div>

                    <div class="accordion-item">
                        <button class="accordion-header">
                            <span>What COVID-19 policies should I be aware of?</span>
                            <i class="fas fa-chevron-down"></i>
                        </button>
                        <div class="accordion-content">
                            <p>COVID-19 policies vary by location and listing. Check the specific listing for current cleaning protocols, cancellation policies, and any health & safety measures. We recommend reviewing official government travel advisories as well.</p>
                        </div>
                    </div>
                </div>

                <!-- Hosting -->
                <div class="faq-section" data-category="host">
                    <h3><i class="fas fa-home"></i> Hosting</h3>

                    <div class="accordion-item">
                        <button class="accordion-header">
                            <span>How do I become a host on SnapTrip?</span>
                            <i class="fas fa-chevron-down"></i>
                        </button>
                        <div class="accordion-content">
                            <p>Click "Become a Host" and create your listing. Provide details about your property, set your rates and availability, and upload high-quality photos. Our team will review and verify your listing before it goes live.</p>
                        </div>
                    </div>

                    <div class="accordion-item">
                        <button class="accordion-header">
                            <span>What are the requirements to host?</span>
                            <i class="fas fa-chevron-down"></i>
                        </button>
                        <div class="accordion-content">
                            <p>You must be 18+ years old, have a verified government-issued ID, and provide accurate information about your listing. Properties must meet our quality standards and comply with local laws and regulations.</p>
                        </div>
                    </div>

                    <div class="accordion-item">
                        <button class="accordion-header">
                            <span>How do I set my pricing?</span>
                            <i class="fas fa-chevron-down"></i>
                        </button>
                        <div class="accordion-content">
                            <p>Use our smart pricing tool to set competitive rates based on location, seasonality, and demand. You can also set custom rates for special dates. Consider your costs and what similar properties charge in your area.</p>
                        </div>
                    </div>

                    <div class="accordion-item">
                        <button class="accordion-header">
                            <span>When do I get paid for bookings?</span>
                            <i class="fas fa-chevron-down"></i>
                        </button>
                        <div class="accordion-content">
                            <p>Payments are held until 24 hours after check-in to protect both hosts and guests. Funds are then transferred to your account, typically within 3-5 business days depending on your payout method.</p>
                        </div>
                    </div>
                </div>

                <!-- Support -->
                <div class="faq-section" data-category="support">
                    <h3><i class="fas fa-headset"></i> Support</h3>

                    <div class="accordion-item">
                        <button class="accordion-header">
                            <span>How can I contact customer support?</span>
                            <i class="fas fa-chevron-down"></i>
                        </button>
                        <div class="accordion-content">
                            <p>You can reach us through the contact form on our website, email us at support@snaptrip.com, or call our support line. For urgent safety concerns, use our 24/7 emergency hotline.</p>
                        </div>
                    </div>

                    <div class="accordion-item">
                        <button class="accordion-header">
                            <span>What languages do you support?</span>
                            <i class="fas fa-chevron-down"></i>
                        </button>
                        <div class="accordion-content">
                            <p>Our platform is available in multiple languages, and our support team speaks English, Spanish, French, German, Italian, and Portuguese. We're continuously adding more language options.</p>
                        </div>
                    </div>

                    <div class="accordion-item">
                        <button class="accordion-header">
                            <span>How do I report a problem with a listing?</span>
                            <i class="fas fa-chevron-down"></i>
                        </button>
                        <div class="accordion-content">
                            <p>Use the "Report Listing" feature on the listing page or contact our support team directly. Provide as many details as possible, including photos if applicable. We investigate all reports promptly.</p>
                        </div>
                    </div>

                    <div class="accordion-item">
                        <button class="accordion-header">
                            <span>Can I get a refund for a bad experience?</span>
                            <i class="fas fa-chevron-down"></i>
                        </button>
                        <div class="accordion-content">
                            <p>If your experience doesn't match the listing description, contact us within 24 hours of check-in. We'll work with you and the host to find a resolution, which may include a partial or full refund depending on the circumstances.</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="faq-contact">
                <div class="contact-card">
                    <h3>Still Need Help?</h3>
                    <p>Can't find the answer you're looking for? Our friendly support team is here to help.</p>
                    <div class="contact-options">
                        <a href="/contact" class="btn btn-primary">
                            <i class="fas fa-envelope"></i> Contact Support
                        </a>
                        <a href="tel:+15551234567" class="btn btn-outline-primary">
                            <i class="fas fa-phone"></i> Call Us
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.faq-header {
    text-align: center;
    margin-bottom: 3rem;
    padding: 2rem 0;
}

.faq-header h1 {
    color: #2c3e50;
    font-size: 2.5rem;
    margin-bottom: 1rem;
}

.faq-header .lead {
    font-size: 1.2rem;
    color: #7f8c8d;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
}

.faq-search {
    margin-bottom: 2rem;
}

.search-box {
    position: relative;
    max-width: 400px;
    margin: 0 auto;
}

.search-box i {
    position: absolute;
    left: 1rem;
    top: 50%;
    transform: translateY(-50%);
    color: #7f8c8d;
}

.search-box input {
    width: 100%;
    padding: 0.75rem 1rem 0.75rem 2.5rem;
    border: 2px solid #e9ecef;
    border-radius: 25px;
    font-size: 1rem;
    transition: border-color 0.3s ease;
}

.search-box input:focus {
    outline: none;
    border-color: #3498db;
}

.faq-categories {
    display: flex;
    justify-content: center;
    gap: 0.5rem;
    margin-bottom: 3rem;
    flex-wrap: wrap;
}

.category-btn {
    background: #f8f9fa;
    border: 2px solid #e9ecef;
    color: #6c757d;
    padding: 0.5rem 1rem;
    border-radius: 25px;
    cursor: pointer;
    transition: all 0.3s ease;
    font-weight: 500;
    font-size: 0.9rem;
}

.category-btn:hover,
.category-btn.active {
    background: #3498db;
    border-color: #3498db;
    color: white;
}

.faq-accordion {
    margin-bottom: 3rem;
}

.faq-section {
    margin-bottom: 2rem;
}

.faq-section h3 {
    color: #2c3e50;
    font-size: 1.25rem;
    margin-bottom: 1rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.faq-section h3 i {
    color: #3498db;
}

.accordion-item {
    background: white;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    margin-bottom: 0.5rem;
    overflow: hidden;
}

.accordion-header {
    width: 100%;
    background: none;
    border: none;
    padding: 1.5rem;
    text-align: left;
    cursor: pointer;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 1rem;
    font-weight: 600;
    color: #2c3e50;
    transition: background-color 0.3s ease;
}

.accordion-header:hover {
    background: #f8f9fa;
}

.accordion-header span {
    flex: 1;
}

.accordion-header i {
    color: #7f8c8d;
    transition: transform 0.3s ease;
}

.accordion-item.active .accordion-header i {
    transform: rotate(180deg);
}

.accordion-content {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease;
    background: #f8f9fa;
}

.accordion-item.active .accordion-content {
    max-height: 500px;
}

.accordion-content p {
    margin: 0;
    padding: 1.5rem;
    color: #5a6c7d;
    line-height: 1.6;
}

.faq-contact {
    margin-top: 3rem;
}

.contact-card {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    padding: 3rem 2rem;
    border-radius: 12px;
    text-align: center;
}

.contact-card h3 {
    font-size: 1.75rem;
    margin-bottom: 1rem;
}

.contact-card p {
    font-size: 1.1rem;
    margin-bottom: 2rem;
    opacity: 0.9;
}

.contact-options {
    display: flex;
    justify-content: center;
    gap: 1rem;
    flex-wrap: wrap;
}

.btn-primary, .btn-outline-primary {
    padding: 0.75rem 1.5rem;
    border-radius: 6px;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-weight: 600;
    transition: all 0.3s ease;
}

.btn-primary {
    background: white;
    color: #3498db;
    border: 2px solid white;
}

.btn-primary:hover {
    background: rgba(255,255,255,0.9);
    color: #2980b9;
}

.btn-outline-primary {
    background: transparent;
    color: white;
    border: 2px solid white;
}

.btn-outline-primary:hover {
    background: white;
    color: #667eea;
}

@media (max-width: 768px) {
    .faq-categories {
        justify-content: flex-start;
        overflow-x: auto;
        padding-bottom: 0.5rem;
    }

    .contact-options {
        flex-direction: column;
        align-items: center;
    }

    .faq-header h1 {
        font-size: 2rem;
    }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Accordion functionality
    const accordionHeaders = document.querySelectorAll('.accordion-header');

    accordionHeaders.forEach(header => {
        header.addEventListener('click', function() {
            const item = this.parentElement;
            const isActive = item.classList.contains('active');

            // Close all accordion items
            document.querySelectorAll('.accordion-item').forEach(item => {
                item.classList.remove('active');
            });

            // Open clicked item if it wasn't active
            if (!isActive) {
                item.classList.add('active');
            }
        });
    });

    // Category filtering
    const categoryButtons = document.querySelectorAll('.category-btn');
    const faqSections = document.querySelectorAll('.faq-section');

    categoryButtons.forEach(button => {
        button.addEventListener('click', () => {
            // Remove active class from all buttons
            categoryButtons.forEach(btn => btn.classList.remove('active'));
            // Add active class to clicked button
            button.classList.add('active');

            const category = button.dataset.category;

            faqSections.forEach(section => {
                if (category === 'all' || section.dataset.category === category) {
                    section.style.display = 'block';
                } else {
                    section.style.display = 'none';
                }
            });
        });
    });

    // Search functionality
    const searchInput = document.getElementById('faq-search');
    const accordionItems = document.querySelectorAll('.accordion-item');

    searchInput.addEventListener('input', function() {
        const searchTerm = this.value.toLowerCase();

        accordionItems.forEach(item => {
            const question = item.querySelector('.accordion-header span').textContent.toLowerCase();
            const answer = item.querySelector('.accordion-content p').textContent.toLowerCase();

            if (question.includes(searchTerm) || answer.includes(searchTerm)) {
                item.style.display = 'block';
                // Show parent section
                item.closest('.faq-section').style.display = 'block';
            } else {
                item.style.display = 'none';
            }
        });

        // Reset category filter when searching
        categoryButtons.forEach(btn => btn.classList.remove('active'));
        categoryButtons[0].classList.add('active');
    });
});
</script>
