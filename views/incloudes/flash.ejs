<% if(success && success.length){ %>
  <div class="flash-message flash-success">
    <div class="flash-icon">
      <i class="fa-solid fa-circle-check"></i>
    </div>
    <div class="flash-content">
      <span class="flash-title">Success!</span>
      <p class="flash-message-text"><%= success %></p>
    </div>
    <button type="button" class="flash-close" data-bs-dismiss="alert" aria-label="Close">
      <i class="fa-solid fa-xmark"></i>
    </button>
    <div class="flash-progress"></div>
  </div>
<% }  %>

<% if(error && error.length){ %>
  <div class="flash-message flash-error">
    <div class="flash-icon">
      <i class="fa-solid fa-circle-exclamation"></i>
    </div>
    <div class="flash-content">
      <span class="flash-title">Error!</span>
      <p class="flash-message-text"><%= error %></p>
    </div>
    <button type="button" class="flash-close" data-bs-dismiss="alert" aria-label="Close">
      <i class="fa-solid fa-xmark"></i>
    </button>
    <div class="flash-progress"></div>
  </div>
<% }  %>

<style>
  /* Flash Messages Container */
  .flash-container {
    position: fixed;
    top: 20px;
    right: 20px;
    z-index: 9999;
    display: flex;
    flex-direction: column;
    gap: 10px;
    max-width: 400px;
  }

  /* Flash Message Base */
  .flash-message {
    display: flex;
    align-items: flex-start;
    gap: 12px;
    padding: 16px 20px;
    border-radius: 12px;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.15);
    position: relative;
    overflow: hidden;
    animation: slideIn 0.4s ease;
    min-width: 300px;
  }

  @keyframes slideIn {
    from {
      transform: translateX(100%);
      opacity: 0;
    }
    to {
      transform: translateX(0);
      opacity: 1;
    }
  }

  @keyframes slideOut {
    from {
      transform: translateX(0);
      opacity: 1;
    }
    to {
      transform: translateX(100%);
      opacity: 0;
    }
  }

  /* Success Message */
  .flash-success {
    background: linear-gradient(135deg, #ffffff 0%, #f0fff4 100%);
    border: 1px solid #86efac;
    border-left: 4px solid #22c55e;
  }

  .flash-success .flash-icon {
    color: #22c55e;
    font-size: 1.5rem;
  }

  .flash-success .flash-title {
    color: #15803d;
  }

  .flash-success .flash-progress {
    background: linear-gradient(90deg, #22c55e, #4ade80);
  }

  /* Error Message */
  .flash-error {
    background: linear-gradient(135deg, #ffffff 0%, #fff1f2 100%);
    border: 1px solid #fca5a5;
    border-left: 4px solid #ef4444;
  }

  .flash-error .flash-icon {
    color: #ef4444;
    font-size: 1.5rem;
  }

  .flash-error .flash-title {
    color: #b91c1c;
  }

  .flash-error .flash-progress {
    background: linear-gradient(90deg, #ef4444, #f87171);
  }

  /* Flash Icon */
  .flash-icon {
    flex-shrink: 0;
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  /* Flash Content */
  .flash-content {
    flex: 1;
  }

  .flash-title {
    font-weight: 700;
    font-size: 0.95rem;
    display: block;
    margin-bottom: 4px;
  }

  .flash-message-text {
    margin: 0;
    font-size: 0.9rem;
    color: var(--text-dark, #374151);
    line-height: 1.4;
  }

  /* Flash Close Button */
  .flash-close {
    flex-shrink: 0;
    width: 28px;
    height: 28px;
    border: none;
    background: transparent;
    color: var(--text-light, #9ca3af);
    cursor: pointer;
    border-radius: 6px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s ease;
  }

  .flash-close:hover {
    background: rgba(0, 0, 0, 0.05);
    color: var(--text-dark, #374151);
  }

  /* Progress Bar */
  .flash-progress {
    position: absolute;
    bottom: 0;
    left: 0;
    height: 3px;
    width: 100%;
    animation: progressShrink 3s linear forwards;
  }

  @keyframes progressShrink {
    from {
      width: 100%;
    }
    to {
      width: 0%;
    }
  }

  /* Responsive */
  @media (max-width: 576px) {
    .flash-container {
      left: 10px;
      right: 10px;
      top: 10px;
      max-width: none;
    }

    .flash-message {
      min-width: auto;
      padding: 12px 16px;
    }
  }
</style>

<script>
  // Auto-dismiss flash messages after 3 seconds
  document.addEventListener('DOMContentLoaded', function() {
    const flashMessages = document.querySelectorAll('.flash-message');
    
    flashMessages.forEach(message => {
      // Auto-dismiss after 3 seconds
      setTimeout(() => {
        dismissMessage(message);
      }, 3000);
      
      // Close button click handler
      const closeBtn = message.querySelector('.flash-close');
      if (closeBtn) {
        closeBtn.addEventListener('click', () => {
          dismissMessage(message);
        });
      }
    });
    
    function dismissMessage(message) {
      if (message && message.parentElement) {
        message.style.animation = 'slideOut 0.3s ease forwards';
        setTimeout(() => {
          if (message && message.parentElement) {
            message.remove();
          }
        }, 300);
      }
    }
  });
</script>